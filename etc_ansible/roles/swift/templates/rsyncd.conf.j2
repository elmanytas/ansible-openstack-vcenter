uid = swift
gid = swift
log file = /var/log/rsyncd.log
pid file = /var/run/rsyncd.pid
address = {{ ansible_osm["ipv4"]["address"] }}

[account]
max connections = 2
path = {{ swift_rsync_directory }}
read only = false
lock file = /var/lock/account.lock

[container]
max connections = 2
path = {{ swift_rsync_directory }}
read only = false
lock file = /var/lock/container.lock

[object]
max connections = 2
path = {{ swift_rsync_directory }}
read only = false
lock file = /var/lock/object.lock
